{
	"name": "nextjs-basic-config",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build --turbopack",
		"start": "next start",
		"lint": "biome check",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"prepare": "husky"
	},
	"dependencies": {
		"next": "15.5.4",
		"react": "19.1.0",
		"react-dom": "19.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.1",
		"prettier": "^3.6.2",
		"typescript": "^5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json,css,md}": [
			"prettier --write",
			"biome check --fix",
			"git add"
		]
	}
}
